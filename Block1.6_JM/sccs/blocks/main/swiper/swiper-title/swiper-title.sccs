.swiper__title {
  display: flex;
  align-items: center;
  border-top: 1px solid $color-border-light;
  text-transform: uppercase;
  color: $color-link;
  background: linear-gradient(90deg, #F8F8F8 1.39%, #FFFFFF 100%);
  margin-bottom: 16px;
  padding: 16px;
  @media only screen and (min-width: $screen-tablet) {
    padding-left: 24px;
  }
  @media only screen and (min-width: $screen-desktop) {
    padding-left: 32px ;
  }
}
