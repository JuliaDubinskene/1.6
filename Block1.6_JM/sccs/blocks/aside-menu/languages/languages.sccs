.languages__btn {
  width: 25px;
  height: 25px;
  border: 0;
  text-transform: uppercase;
  font-family: $font-light;
  font-weight: 900;
  background-color: rgba(255, 255,255, 0.0);
  outline: none;
  &:focus{
    box-shadow: 0 0 0 2px gray;
  }
  &:hover {
    opacity: 0.5;
    transform: scale(1.2);
  }
}
